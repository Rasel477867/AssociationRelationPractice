@model AssociationRealationship.ModelsView.DepartmentEmployee

@{
    ViewData["Title"] = "DepartmentEmployee";
}

<h1>Department</h1>

<h4>Employee Findout Using Ajax j-query</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DepartmentEmployee">
            <div class="form-group">
                <label class="control-label"></label>
                <select name="DepartmentId" id="DepartmentId" class="form-control" asp-items="Model.Departments">
                    <option value="">---Select---</option>
                </select>

            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="EmployeeId" id="EmployeeId" class="form-control">
                    <option value="">---Select---</option>
                </select>

            </div>



            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
       // console.log($("#DepartmentId"));
        $("#DepartmentId").change(function () {
            var departmentId = $("#DepartmentId").val();
            //console.log(departmentId);
          
          
            $('#EmployeeId').empty();
      
            $.ajax({
                type: "POST",
                url: "/Employee/GetEmployee",
                data: {departmentId: departmentId},

                success: function (response) {
                    var emp = response;
                    $.each(emp, function (key, employee) {
                        console.log(key);
                        var option = "<option value='" + employee.id + "'>" + employee.name + "</option>";
                        $('#EmployeeId').append(option);

                    });

                },
                error: function (response) {
                    alert(response.message);
                }
            });



        });

    </script>
}
